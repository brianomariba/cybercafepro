# =================================================
# HawkNine Backend Environment Configuration
# =================================================
# Copy this file to .env and update values for your environment

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
# For local development: mongodb://localhost:27017/hawknine
# For production with auth: mongodb://username:password@localhost:27017/hawknine
MONGODB_URI=mongodb://localhost:27017/hawknine

# Security - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=https://admin.hawkninegroup.com,https://portal.hawkninegroup.com,https://hawkninegroup.com

# File Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
AUTH_RATE_LIMIT_MAX=10
